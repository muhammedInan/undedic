{% extends 'base.html.twig' %}

{% block title %}Student index{% endblock %}

{% block body %}
<div class="container">
    <div class="section">

        <div class="row">
            <div class="col s12 m12">
    <h1>Student index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FirstName</th>
                <th>LastName</th>
                <th>NumEtud</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.id }}</td>
                <td>{{ student.firstName }}</td>
                <td>{{ student.lastName }}</td>
                <td>{{ student.numEtud }}</td>
                <td>
                    <button type="button" class="btn btn-secondary">
                    <a href="{{ path('student_show', {'id': student.id}) }}">show</a></button>
                    <button type="button" class="btn btn-secondary">
                    <a href="{{ path('student_edit', {'id': student.id}) }}">edit</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <button type="button" class="btn btn-secondary">
    <a href="{{ path('student_new') }}">Create new</a></button>

    </div>
  </div>
</div>
</div>
{% endblock %}
